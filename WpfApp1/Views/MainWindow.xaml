<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Margin="30">
            <ComboBox ItemsSource="{Binding Printers}"  DisplayMemberPath="Color">
                
            </ComboBox>
            <Label FontSize="26" >Model</Label>
            <TextBlock FontSize="26" ></TextBlock>
            <Label FontSize="26" >Vendor</Label>
            <TextBlock FontSize="26" ></TextBlock>
            <Label FontSize="26">Color</Label>
            <TextBlock FontSize="26" ></TextBlock>
            <Button Margin="10" FontSize="26">
                Show Data
            </Button>
            <Button Margin="10" FontSize="26">Edit</Button>
        </StackPanel>
    </StackPanel>
</Window>
